programa ejercicio
procesos
  proceso calle (ES flores:numero)
  comenzar
    mientras HayFlorEnLaEsquina
      tomarFlor
      flores:= flores + 1
    si HayFlorEnLaBolsa
      Pos (PosAv, PosCa + 1)
      mientras HayFlorEnLaBolsa
        depositarFlor
      Pos (PosAv, PosCa - 1)      
  fin
areas
  ciudad: AreaC (1,1,100,100)
robots
  robot robot1
  variables
    flor: numero
  comenzar
    derecha
    repetir 49
      repetir 99
        calle (flor)
        mover
      calle (flor)
      Pos (1, PosCa + 2)
    repetir 99
      calle (flor)
      mover
    calle (flor)
    Informar (flor)
  fin
variables
  R-Info: robot1
comenzar
  AsignarArea(R-Info, ciudad)
  Iniciar (R-Info, 1,1)
fin
