programa hola
procesos
  proceso contarFlor1 (ES contarFlor : numero)
  comenzar
    contarFlor:= 0
    mientras HayFlorEnLaEsquina & (contarFlor <6)
      tomarFlor
      contarFlor:= contarFlor + 1
    repetir (contarFlor)
      depositarFlor 
  fin
  proceso contarPapel1 (ES contarPapel: numero)
  comenzar
    contarPapel:= 0
    mientras HayPapelEnLaEsquina & (contarPapel < 3)
      tomarPapel
      contarPapel:= contarPapel + 1
    repetir (contarPapel)
      depositarPapel
  fin
areas
  ciudad: AreaC (1,1,100,100)
robots
  robot robot1
  variables
    esquinaV: boolean
    callesEsquinaF: numero
    totalEsquinaF: numero
    contarFlor3: numero
    contarPapel3: numero
  comenzar
    derecha
    totalEsquinaF:= 0
    repetir 49
      callesEsquinaF:= 0
      repetir 99
        contarFlor1(contarFlor3)
        contarPapel1(contarPapel3)
        esquinaV:= (contarFlor3 >=5) & (contarPapel3 = 2)
        si esquinaV
          mientras HayFlorEnLaEsquina
            tomarFlor
          mientras HayPapelEnLaEsquina
            tomarPapel
        sino
          callesEsquinaF:= (callesEsquinaF + 1 )
        mover  
      contarFlor1(contarFlor3)
      contarPapel1(contarPapel3)
      esquinaV:= (contarFlor3 >=5) & (contarPapel3 = 2)
      si esquinaV
        mientras HayFlorEnLaEsquina
          tomarFlor
        mientras HayPapelEnLaEsquina
          tomarPapel
      sino
        callesEsquinaF:= (callesEsquinaF + 1 )         
      Informar (callesEsquinaF)
      totalEsquinaF:= (totalEsquinaF + callesEsquinaF)
      Pos ( 1, PosCa + 2)    
    callesEsquinaF:= 0
    repetir 99
      contarFlor1(contarFlor3)
      contarPapel1(contarPapel3)
      esquinaV:= (contarFlor3 >=5) & (contarPapel3 = 2)
      si esquinaV
        mientras HayFlorEnLaEsquina
          tomarFlor
        mientras HayPapelEnLaEsquina
          tomarPapel
      sino
        callesEsquinaF:= (callesEsquinaF + 1 )
      mover  
    contarFlor1(contarFlor3)
    contarPapel1(contarPapel3)
    esquinaV:= (contarFlor3 >=5) & (contarPapel3 = 2)
    si esquinaV
      mientras HayFlorEnLaEsquina
        tomarFlor
      mientras HayPapelEnLaEsquina
        tomarPapel
    sino
      callesEsquinaF:= (callesEsquinaF + 1 )         
    Informar (callesEsquinaF)
    totalEsquinaF:= (totalEsquinaF + callesEsquinaF)    
    Informar (totalEsquinaF)
  fin
variables
  R-Info: robot1
comenzar
  AsignarArea (R-Info, ciudad)
  Iniciar (R-Info, 1,1)
fin


