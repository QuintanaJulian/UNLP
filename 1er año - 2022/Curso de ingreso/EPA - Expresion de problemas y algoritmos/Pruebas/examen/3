programa hola
procesos
  proceso contarFlor1 (ES contarFlor : numero)
  comenzar
    contarFlor:= 0
    mientras HayFlorEnLaEsquina
      tomarFlor
      contarFlor(contarFlor + 1)
    repetir (contarFlor)
      depositarFlor      
  fin
areas
  ciudad: AreaC (1,1,100,100)
robots
  robot robot1
  variables
    esquinaV: boolean
    totalEsquinaF: numero
  comenzar
    totalEsquinaF:= 0
    mover
    repetir 99
      contarFlor1(contarFlor)
      mover
      esquinaV:= (contarFlor2 >=5)
      si esquinaV
        mientras HayFlorEnLaEsquina
          tomarFlor
        mientras HayPapelEnLaEsquina
          tomarPapel
      sino
        totalEsquinaF:= (totalEsquinaF + 1 )
      mover
    contarFlor1(contarFlor)
    esquinaV:= (contarFlor >=5)
    si esquinaV
      mientras HayFlorEnLaEsquina
        tomarFlor
      mientras HayPapelEnLaEsquina
        tomarPapel
    sino
      totalEsquinaF:= (totalEsquinaF + 1 )    
    Informar (totalEsquinaF)
  fin
variables
  R-Info: robot1
comenzar
  AsignarArea (R-Info, ciudad)
  Iniciar (R-Info, 1,1)
fin


