programa hola
procesos
  proceso contarFlor1 (ES contarFlor : numero)
  variables
    aux: numero
  comenzar
    contarFlor:= 0
    mientras HayFlorEnLaEsquina & (contarFlor <6)
      tomarFlor
      contarFlor:= contarFlor + 1
    repetir (contarFlor)
      depositarFlor 
  fin
areas
  ciudad: AreaC (1,1,100,100)
robots
  robot robot1
  variables
    esquinaV: boolean
    totalEsquinaF: numero
    contarFlor3: numero
  comenzar
    totalEsquinaF:= 0
    repetir 99
      contarFlor1(contarFlor3)
      esquinaV:= (contarFlor3 >=5)
      si esquinaV
        mientras HayFlorEnLaEsquina
          tomarFlor
        mientras HayPapelEnLaEsquina
          tomarPapel
      sino
        totalEsquinaF:= (totalEsquinaF + 1 )
      mover  
    Informar (totalEsquinaF)
  fin
variables
  R-Info: robot1
comenzar
  AsignarArea (R-Info, ciudad)
  Iniciar (R-Info, 1,1)
fin


