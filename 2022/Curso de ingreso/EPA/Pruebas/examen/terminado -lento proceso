programa hola
procesos
  proceso contarFlor1 (ES contarFlor : numero)
  comenzar
    contarFlor:= 0
    mientras HayFlorEnLaEsquina & (contarFlor <6)
      tomarFlor
      contarFlor:= contarFlor + 1
    repetir (contarFlor)
      depositarFlor 
  fin
  proceso contarPapel1 (ES contarPapel: numero)
  comenzar
    contarPapel:= 0
    mientras HayPapelEnLaEsquina & (contarPapel < 3)
      tomarPapel
      contarPapel:= contarPapel + 1
    repetir (contarPapel)
      depositarPapel
  fin
  proceso esquina (ES esquinaV: boolean)
  variables
    callesEsquinaF: numero
    contarFlor3: numero
    contarPapel3: numero
  comenzar
    contarFlor4(contarFlor3)
    contarPapel4(contarPapel3)
    mover
    esquinaV:= (contarFlor3 >=5) & (contarPapel3 = 2)
    mover
    si esquinaV
      mientras HayFlorEnLaEsquina
        tomarFlor
      mientras HayPapelEnLaEsquina
        tomarPapel
    sino
      callesEsquinaF:= (callesEsquinaF + 1 ) 
  fin
areas
  ciudad: AreaC (1,1,100,100)
robots
  robot robot1
  variables
    esquina2: numero
    contarFlor4: numero
    contarPapel4: numero
  comenzar
    contarFlor1 (contarFlor4)
    contarPapel1 (contarPapel4)
    esquina (esquina2)
    mover
  fin
variables
  R-Info: robot1
comenzar
  AsignarArea (R-Info, ciudad)
  Iniciar (R-Info, 1,1)
fin


