programa  prueba
procesos
  proceso  calle  (ES flores: numero)
  variables
    aux: numero
  comenzar
    repetir 99
      si HayFlorEnLaEsquina
        tomarFlor
      mover
  fin
areas
  ciudad: AreaC (1,1,100,100)
robots
  robot robot1
  variables
    aux: numero
    callesRecorridas: numero
    avenidasRecorridas: numero
  comenzar
    callesRecorridas:= 1
    derecha
    repetir 99
      calle (aux)
      Informar (callesRecorridas)
      callesRecorridas:= (callesRecorridas + 1)
      Pos (1, callesRecorridas)
    calle (aux)
    Pos (1, 100) 
    derecha
    avenidasRecorridas:= 1
    repetir 99
      calle (aux)
      Informar (avenidasRecorridas)
      avenidasRecorridas:= (avenidasRecorridas + 1)
      Pos (avenidasRecorridas, 100)
    calle (aux)
    Informar (avenidasRecorridas)
    Informar (callesRecorridas)
  fin
variables
  rinfo: robot1
comenzar
  AsignarArea (rinfo, ciudad)
  Iniciar (rinfo, 1,1)
fin